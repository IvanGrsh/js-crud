{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
	<hr>
	<div class="products">
		<div class="product__title">
			<h1>Product list</h1>
		</div>


		<section>
			<div class="">
				{{#with data.products}}
				{{#if isEmpty}}
				<button class="button">
					<a href='/product-create' class="button__link link"> Product list empty. Create new product</a>
				</button>
				{{else}}
				<div>
					<button class="button">
						<a href='/product-create' class="button__link link"> Create product</a>
					</button>
				</div>

			</div>


			<div class="products__list">

				{{>product-card}}
				{{!--
				{{#each list}}
				<div class="products__item">
					<div class="product__name">
						{{name}}
					</div>
					<div class="products__description">
						{{description}}
					</div>
					<div class="products__id">
						ID: {{id}}
					</div>
					<div class="item__line">
						<div class="products__price">
							{{price}}$
						</div>

						<div>
							<a href="/product-edit?id={{id}}" class="products-edit" link> Edit</a>
						</div>
					</div>

				</div>
				{{/each}} --}}

			</div>
			{{/if}}
			{{/with}}
	</div>
	</section>
	</div>
</main>



