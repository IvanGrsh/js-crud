<main class="main">
	{{>heading title=title }}
	{{#with data.purchases}}

	{{#each list}}
	<a href='/purchase-info?id={{id}}' class="link">
		<div class="purchase-item ">
			<div class="purchase-item__block center">
				<span class="title">ID: {{id}}</span>

			</div>
			<div class="purchase-item__block">
				<span class="title">Order:</span>
				<span class="text">{{product.title}}</span>
			</div>
			<div class="purchase-item__block">
				<span class="title">Total:</span>
				<span class="text">{{totalPrice}} грн.</span>
			</div>
			<div class="purchase-item__block">
				<span class="title"> Bonus:</span>
				<span class="text">{{bonus}} grn.</span>
			</div>
		</div>



		{{>divider}}
	</a>
	{{/each}}
	{{/with}}
</main>